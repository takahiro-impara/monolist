<% content_for :itemshow do %>
  <title><%= @item.title %>- monolist</title>
  <description><%= @item.title %>に関する情報です。<%= current_user.name%>のページを表示しています。</description>
<% end %>
<div class="container">
  <div class="container-inner inner-sm clearfix">
    <div class="item-single-main">
      <div class="image">
        <div class="img-wrap">
            <% if @item.large_image.present? %>
              <%= image_tag(@item.large_image , alt: @item.title) %>
            <% elsif @item.medium_image.present? %>
              <%= image_tag(@item.medium_image , alt: @item.title) %>
            <% elsif @item.small_image.present?%>
              <%= image_tag(@item.small_image , alt: @item.title) %>
            <% else %>
              <%= image_tag("no-image.png" , alt: @item.title) %>
            <% end %>
        </div>
      </div>
      <div class="title">
        <%= @item.title %>
      </div>
      <%= render 'action' , item: @item %>
    </div>
    <div class="item-single-side">
      <div class="side-box">
        <h4 class="side-box-title">Haveしたユーザー</h4>
        <div class="side-box-body">
        <% @have_users.each do |user| %>
          <%= link_to gravatar_for(user, size: 30), user %>
        <% end %>
        </div>
      </div>
      <div class="side-box">
        <h4 class="side-box-title">Wantしたユーザー</h4>
        <div class="side-box-body">
        <% @want_users.each do |user| %>
          <%= link_to gravatar_for(user, size: 30), user %>
        <% end %>
        </div>
      </div>
      <div class="text-center">
        <%= link_to(image_tag("amazon-button.png", {alt: "Amazon詳細ページへ"}), @item.detail_page_url) %>
      </div>
    </div>
  </div>
</div>
