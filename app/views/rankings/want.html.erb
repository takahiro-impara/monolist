<% tmp=1 %>
<ul class="ranking">
       <% @items.each_with_index do |item, i| %>
       <ul>
              <% if @values[i] == @values[i-1]%>
                     <%= tmp %>位
              <% else %>
                     <%= i+1 %>位
                     <% tmp = i+1 %>
              <% end %>
              <%= @values[i] %>人がwantしています
              <%= link_to image_tag(item.small_image , alt: item.title) , item %>
              <%= link_to item.title , item %>
       </ul>
       <% end %>
</ul>